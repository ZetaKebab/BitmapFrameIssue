<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontSize="30"  Text="Sample app" Margin="0,10,0,0"/>

        <Border x:Name="Cover_Border" Padding="2" HorizontalAlignment="Center" BorderThickness="2" BorderBrush="Black" Width="300" Height="300" Margin="0,40,0,0">
            <Image x:Name="Cover" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" />
        </Border>
    </Grid>
</Window>
